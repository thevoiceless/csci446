<div class="page-header">
	<h1 class="text-center">Rolling Stone's Top 100 Albums of All Time</h1>
</div>
<form id="albums-form" action="/list" method="POST" class="text-center">
	<label for="order"><strong>Sort By:</strong></label>
	<select name="order">
		<option value="rank">Rank (Default)</option>
		<option value="title">Title</option>
		<option value="year">Year</option>
	</select>
	<label for="rank"><strong>Rank to Highlight:</strong></label>
	<select name="rank">
		<% (1..100).each do |i| %>
			<option value="<%= i %>"><%= i %></option>
		<% end %>
	</select>
	<div>
		<input type="submit" value="Display List" class="btn btn-primary">
	</div>
</form>